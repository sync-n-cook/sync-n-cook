<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="6"
    android:padding="5dp">


    <LinearLayout
        android:background="#FFFFFF"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/b_kitchen"
            android:text="@string/kitchen"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/kitchen_buttons"
            android:background="@drawable/syh_logo_app_kitchen"
            />

        <ImageButton
            android:id="@+id/b_livingroom"
            android:text="@string/livingroom"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/living_room_buttons"
            android:background="@drawable/syh_logo_app_canap"
            />


    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/b_bedroom"
            android:text="@string/bedroom"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/bedroom_buttons"
            android:background="@drawable/syh_logo_app_all" />

        <ImageButton
            android:id="@+id/b_bathroom"
            android:text="@string/bathroom"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/bath_room_buttons"
            android:background="@drawable/syh_logo_app_bath"/>

    </LinearLayout>

    <LinearLayout
        android:background="#00FF00"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/b_entrance"
            android:text="@string/bedroom"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/b_starirs"
            android:text="@string/bathroom"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>